<config>
    <modules>
        <Codnitive_AdvancedHome>
            <version>0.1.71</version>
            <title>Advanced Home Page</title>
            <link><![CDATA[http://www.codnitive.com/]]></link>
        </Codnitive_AdvancedHome>
    </modules>
    <global>
        <models>
            <advancedhome>
                <class>Codnitive_AdvancedHome_Model</class>
            </advancedhome>
        </models>
        <helpers>
            <advancedhome>
                <class>Codnitive_AdvancedHome_Helper</class>
            </advancedhome>
        </helpers>
        <resources>
            <advancedhome_setup>
                <setup>
                    <module>Codnitive_AdvancedHome</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </advancedhome_setup>
            <advancedhome_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </advancedhome_write>
            <advancedhome_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </advancedhome_read>
        </resources>
        <blocks>
            <advancedhome>
                <class>Codnitive_AdvancedHome_Block</class>
            </advancedhome>
        </blocks>
    </global>

    <frontend>
        <layout>
            <updates>
                <advancedhome>
                    <file>codnitive/advancedhome.xml</file>
                </advancedhome>
            </updates>
        </layout>
    </frontend>
</config>